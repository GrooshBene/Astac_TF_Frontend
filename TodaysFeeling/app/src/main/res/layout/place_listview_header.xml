<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25" />

        <LinearLayout
            android:layout_width="@dimen/keyline_1_minus_8dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:weightSum="10">
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="5"
                android:src="@drawable/noise" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="소음"
                android:textColor="#80000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mSilenceText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#80000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyline_1_minus_8dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:weightSum="10">
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="5"
                android:src="@drawable/light" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="조명"
                android:textColor="#80000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mBrightText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#80000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyline_1_minus_8dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:weightSum="10">
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="5"
                android:src="@drawable/temperature" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="0.7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="온도"
                android:textColor="#80000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mTempText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#80000000"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_gravity="bottom"
        android:background="#000000"></LinearLayout>

</LinearLayout>